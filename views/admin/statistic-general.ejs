        <script>
            var data = [{
                data: [1, 2],
                labels: ["Emri", "Shërbimi"],
                backgroundColor: [
                    'rgb(255, 99, 132)',
                    'rgb(54, 162, 235)',
                ],
                borderColor: "#fff"
            }];
            var options = {
                tooltips: {
                    enabled: false
                },
                plugins: {
                    datalabels: {
                        formatter: (value, ctx2) => {
                            let datasets = ctx2.chart.data.datasets;
                            if (datasets.indexOf(ctx2.dataset) === datasets.length - 1) {
                                let sum = datasets[0].data.reduce((a, b) => a + b, 0);
                                let percentage = Math.round((value / sum) * 100) + '%';
                                return percentage;
                            } else {
                                return percentage;
                            }
                        },
                        color: '#fff',
                    }
                }
            };
            // var ctx4 = document.getElementById("bussiness-individual").getContext('2d');
