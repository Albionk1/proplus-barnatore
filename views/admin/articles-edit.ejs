    <!--begin::Javascript-->
    <%- include('./includes/script.ejs') %>
        <script>
            const toggleInput = document.getElementById('toggleInput');
            const discountInput = document.getElementsByClassName('hidden-input');

            toggleInput.addEventListener('change', () => {
                // Start the loop from the second hidden input element
                for (let i = 0; i < discountInput.length; i++) {
                    if (toggleInput.checked) {
                        discountInput[i].classList.remove('d-none');
                    } else {
                        discountInput[i].classList.add('d-none');
                    }
                }
            });
        </script>
