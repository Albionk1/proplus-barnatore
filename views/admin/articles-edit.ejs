                                                    <!--end::Col-->
                                                    <!--begin::Col-->
                                                    <div class="col-md-3 col-lg-4 col-xl-3 col-sm-6">
                                                        <!--begin::Input group-->
                                                        <div class="d-flex flex-column mb-2 fv-row">
                                                            <!--begin::Label-->
                                                            <label class="fs-6 fw-semibold form-label mt-3">
                                                                <span>Çmimi me shumicë</span>
                                                            </label>
