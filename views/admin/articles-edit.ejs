                                                            <select name="Prodhuesi" aria-label="Prodhuesi" id="manufacturer"
                                                                data-control="select2" data-placeholder="Prodhuesi"
                                                                class="form-select mb-2">
                                                                <option></option>
                                                                <% for(let i =0;i<manufacturer.length;i++){%>
                                                                    <option value="<%=manufacturer[i]._id  %>" <%if(article.manufacturer.toString() === manufacturer[i]._id.toString()){%>selected<% } %>><%=manufacturer[i].name  %>
                                                                    </option>
                                                                     <% } %>
                                                            </select>
                                                            <!--end::Input-->
                                                        </div>
                                                        <!--end::Input group-->
