Product Name: Services
-->
<html lang="en">
<!--begin::Head-->

<head>
    <!--Begin Meta links-->
    <%- include ('includes/meta-links.ejs') %>
        <!--End Meta links-->
        <link href="/assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />

</head>
<!--end::Head-->
<!--begin::Body-->

<body onload="startClock()" id="kt_app_body" data-kt-app-layout="dark-sidebar" data-kt-app-header-fixed="true"
    data-kt-app-sidebar-enabled="true" data-kt-app-sidebar-fixed="true" data-kt-app-sidebar-hoverable="true"
    data-kt-app-sidebar-push-header="true" data-kt-app-sidebar-push-toolbar="true"
    data-kt-app-sidebar-push-footer="true" data-kt-app-toolbar-enabled="true" class="app-default">
    <!--begin::Theme mode setup on page load-->

    <!--end::Theme mode setup on page load-->
    <!--begin::App-->
    <div class="d-flex flex-column flex-root app-root" id="kt_app_root">
        <!--begin::Page-->
        <div class="app-page flex-column flex-column-fluid" id="kt_app_page">
            <!--begin::Header-->
            <%- include('./includes/header.ejs') %>
                <!--end::Header-->
                <!--begin::Wrapper-->
                <div class="app-wrapper flex-column flex-row-fluid" id="kt_app_wrapper">
                    <!--begin::Sidebar-->
                    <%- include('./includes/sidebar.ejs') %>
                        <!--end::Sidebar-->
                        <!--begin::Content-->
                        <div class="content d-flex flex-column flex-column-fluid" id="kt_content">

                            <!--begin::Post-->
                            <div class="post d-flex flex-column-fluid" id="kt_post">
                                <!--begin::Container-->
                                <div id="kt_content_container" class="container-fluid">
                                    <div class="d-flex mt-5 mb-5 flex-wrap">
                                        <div class="mt-3">
                                            <a href="/admin/offers-clients" id="" class="btn btn-primary">
                                                <span class="indicator-label">Klientët</span>
                                            </a>
                                        </div>
                                        <div class="ms-3 mt-3">
                                            <a href="/admin/offer-new" id="" class="btn btn-primary">
                                                <span class="indicator-label">Ofertë e re</span>
                                            </a>
                                        </div>
                                        <!--begin::Col-->
                                        <div class="col-lg-2 ms-auto mt-3">
                                            <!--begin::Input group-->
                                            <div class="d-flex flex-column mb-3 fv-row">
                                                <!--begin::Input-->
                                                <input class="form-control" placeholder="Zgjedh datën"
                                                    id="kt_datepicker_1" />
                                            </div>
                                            <!--end::Input group-->
                                        </div>
                                        <!--end::Col-->
                                        <div class="col-lg-2 ms-2 mt-3">
                                            <div class="w-100">
                                                <!--begin::Select2-->
                                                <select class="form-select form-select-solid" data-control="select2" id="unit"
                                                    data-hide-search="true" data-placeholder="Zgjedh njësinë">
                                                    <option></option>
                                                    <option value="all">Të gjithë</option>
                                                   <% for(let i =0 ;i<unit.length;i++){%>
                                                    <option value="<%=unit[i]._id  %>"><%=unit[i].unit_name  %></option>
                                                    <% } %>
                                                </select>
                                                <!--end::Select2-->
                                            </div>
                                        </div>
                                    </div>
                                    <!--begin::Form-->

                                    <!--begin::Content-->
                                    <div id="kt_app_content" class="app-content flex-column-fluid">
                                        <!--begin::Content container-->
                                        <div id="kt_app_content_container">
                                            <!--begin:::Tab content-->
                                            <div class="tab-content" id="myTabContent">
                                                <!--begin::Content-->
                                                <div id="kt_app_content" class=" flex-column-fluid">
                                                    <!--begin::Content container-->
                                                    <div id="kt_app_content_container">
                                                        <!--begin::Products-->
                                                        <div class="card card-flush mt-3">
                                                            <!--begin::Card header-->
                                                            <div
                                                                class="card-header align-items-center py-5 gap-2 gap-md-5">
                                                                <!--begin::Card title-->
                                                                <div class="card-title">
                                                                    <!--begin::Search-->
                                                                    <div
                                                                        class="d-flex align-items-center position-relative my-1">
                                                                        <i
                                                                            class="ki-duotone ki-magnifier fs-3 position-absolute ms-4">
                                                                            <span class="path1"></span>
                                                                            <span class="path2"></span>
                                                                        </i>
                                                                        <input type="text"
                                                                            id="offert_table-search"
                                                                            class="form-control form-control-solid w-250px ps-12"
                                                                            placeholder="Kërko..." />
                                                                    </div>
                                                                    <!--end::Search-->
                                                                </div>
                                                                <!--end::Card title-->
                                                                <div class=" ms-auto">
                                                                    <div id="print"></div>
                                                                </div>
                                                            </div>
                                                            <!--end::Card header-->
                                                            <!--begin::Card body-->
                                                            <div class="card-body pt-0">
                                                                <div class="table-responsive">
                                                                    <!--begin::Table-->
                                                                    <table
                                                                        class="table align-middle table-row-dashed fs-6 gy-5"
                                                                        id="offert_table">
                                                                        <thead>
                                                                            <tr
                                                                                class="text-start text-gray-800 fw-bold fs-6 text-uppercase gs-0">
                                                                                <th class="w-10px">
                                                                                    Nr
                                                                                </th>
                                                                                <th class="w-100px">
                                                                                    Shifra e ofertimit
                                                                                </th>
                                                                                <th class="w-100px">
                                                                                    Emri i klientit
                                                                                </th>
                                                                                <th class="w-50px">
                                                                                    Data</th>
                                                                                <th class="w-50px">
                                                                                    Nr i artikujve</th>
                                                                                <th class="w-100px">
                                                                                    Çmimi pa zbritje</th>
                                                                                <th class="w-50px">
                                                                                    Zbritja</th>
                                                                                <th class="w-50px">
                                                                                    Vlera totale</th>
                                                                                <th class="text-center w-10px">
                                                                                    Op</th>
                                                                            </tr>
                                                                        </thead>
                                                                        <tbody class="fw-semibold text-gray-700">
                                                                            
                                                                        </tbody>
                                                                    </table>
                                                                    <!--end::Table-->
                                                                </div>
                                                            </div>
                                                            <!--end::Card body-->
                                                        </div>
                                                        <!--end::Products-->
                                                    </div>
                                                    <!--end::Content container-->
                                                </div>
                                                <!--end::Content-->
                                            </div>
                                            <!--end:::Tab content-->
                                        </div>
                                        <!--end::Content container-->
                                    </div>
                                    <!--end::Content-->
                                </div>
                                <!--end::Container-->
                            </div>
                            <!--end::Post-->
                        </div>
                        <!--end::Content-->

                        <%- include('./includes/footer.ejs') %>
                </div>
                <!--end::Wrapper-->
        </div>
        <!--end::Page-->
    </div>
    <!--end::App-->

    <!--begin::Javascript-->
    <%- include('./includes/script.ejs') %>

        <!--end::Javascript-->
        <script src="/assets/plugins/custom/datatables/datatables.bundle.js"></script>
        <!--begin::Custom Javascript(used for this page only)-->
        <script src="/assets/js/custom/apps/ecommerce/customers/listing/search/supplie-1.js"></script>
        <script src="/assets/js/utils.js"></script>
        <script src="/assets/js/offert/offert_table.js"></script>

        <!--end::Javascript-->
</body>
<!--end::Body-->

</html>