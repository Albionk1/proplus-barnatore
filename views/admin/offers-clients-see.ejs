<!DOCTYPE html>
<!--
Author: Thana Dev 2023
Product Name: Services
-->
<html lang="en">
<!--begin::Head-->

<head>
    <!--Begin Meta links-->
    <%- include ('includes/meta-links.ejs') %>
        <!--End Meta links-->
        <link href="/assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />

</head>
<!--end::Head-->
<!--begin::Body-->

<body onload="startClock()" id="kt_app_body" data-kt-app-layout="dark-sidebar" data-kt-app-header-fixed="true"
    data-kt-app-sidebar-enabled="true" data-kt-app-sidebar-fixed="true" data-kt-app-sidebar-hoverable="true"
    data-kt-app-sidebar-push-header="true" data-kt-app-sidebar-push-toolbar="true"
    data-kt-app-sidebar-push-footer="true" data-kt-app-toolbar-enabled="true" class="app-default">
    <!--begin::Theme mode setup on page load-->

    <!--end::Theme mode setup on page load-->
    <!--begin::App-->
    <div class="d-flex flex-column flex-root app-root" id="kt_app_root">
        <!--begin::Page-->
        <div class="app-page flex-column flex-column-fluid" id="kt_app_page">
            <!--begin::Header-->
            <%- include('./includes/header.ejs') %>
                <!--end::Header-->
                <!--begin::Wrapper-->
                <div class="app-wrapper flex-column flex-row-fluid" id="kt_app_wrapper">
                    <!--begin::Sidebar-->
                    <%- include('./includes/sidebar.ejs') %>
                        <!--end::Sidebar-->
                        <!--begin::Content-->
                        <div class="content d-flex flex-column flex-column-fluid" id="kt_content">

                            <!--begin::Post-->
                            <div class="post d-flex flex-column-fluid" id="kt_post">
                                <!--begin::Container-->
                                <div id="kt_content_container" class="container-fluid">
                                    <div class="row mt-3">
                                        <div class="col-lg-6">
                                            <!--begin::Form-->
                                            <form class="form" method="" action="">
                                                <!--begin::Content wrapper-->
                                                <div class="d-flex flex-column flex-column-fluid card">
                                                    <!--begin::Card body-->
                                                    <div class="card-body border-top pt-5">
                                                        <!--begin::Row-->
                                                        <div class="row">
                                                            <!--begin::Col-->
                                                            <div class="col-md-6">
                                                                <!--begin::Input group-->
                                                                <div class="d-flex flex-column mb-2 fv-row">
                                                                    <!--begin::Label-->
                                                                    <label class="fs-6 fw-semibold form-label mt-3">
                                                                        <span>Emri i biznesit</span>
                                                                    </label>
                                                                    <!--end::Label-->
                                                                    <!--begin::Input-->
                                                                    <input type="text"
                                                                        class="form-control form-control-solid" name="" id="name"
                                                                        value="<%=supplier.name  %>" readonly />
                                                                </div>
                                                                <!--end::Input group-->
                                                            </div>
                                                            <!--end::Col-->
                                                            <!--begin::Col-->
                                                            <div class="col-md-6">
                                                                <!--begin::Input group-->
                                                                <div class="d-flex flex-column mb-2 fv-row">
                                                                    <!--begin::Label-->
                                                                    <label class="fs-6 fw-semibold form-label mt-3">
                                                                        <span>Numri i biznesit</span>
                                                                    </label>
                                                                    <!--end::Label-->
                                                                    <!--begin::Input-->
                                                                    <input type="text"
                                                                        class="form-control form-control-solid" name=""
                                                                        value="<%=supplier.arbk  %>" readonly />
                                                                </div>
                                                                <!--end::Input group-->
                                                            </div>
                                                            <!--end::Col-->
                                                            <!--begin::Col-->
                                                            <div class="col-md-6">
                                                                <!--begin::Input group-->
                                                                <div class="d-flex flex-column mb-2 fv-row">
                                                                    <!--begin::Label-->
                                                                    <label class="fs-6 fw-semibold form-label mt-3">
                                                                        <span>Adresa e biznesit</span>
                                                                    </label>
                                                                    <!--end::Label-->
                                                                    <!--begin::Input-->
                                                                    <input type="text"
                                                                        class="form-control form-control-solid" name=""
                                                                        value="<%=supplier.address  %>" readonly />
                                                                </div>
                                                                <!--end::Input group-->
                                                            </div>
                                                            <!--end::Col-->
                                                            <!--begin::Col-->
                                                            <div class="col-md-6">
                                                                <!--begin::Input group-->
                                                                <div class="d-flex flex-column mb-2 fv-row">
                                                                    <!--begin::Label-->
                                                                    <label class="fs-6 fw-semibold form-label mt-3">
                                                                        <span>Email (opsionale)</span>
                                                                    </label>
                                                                    <!--end::Label-->
                                                                    <!--begin::Input-->
                                                                    <input type="text"
                                                                        class="form-control form-control-solid" name=""
                                                                        value="<%=supplier.email  %>" readonly />
                                                                </div>
                                                                <!--end::Input group-->
                                                            </div>
                                                            <!--end::Col-->
                                                            <!--begin::Col-->
                                                            <div class="col-md-6">
                                                                <!--begin::Input group-->
                                                                <div class="d-flex flex-column mb-2 fv-row">
                                                                    <!--begin::Label-->
                                                                    <label class="fs-6 fw-semibold form-label mt-3">
                                                                        <span>Nr i telefonit (opsionale)</span>
                                                                    </label>
                                                                    <!--end::Label-->
                                                                    <!--begin::Input-->
                                                                    <input type="text"
                                                                        class="form-control form-control-solid" name=""
                                                                        value="<%=supplier.phone_number  %>" readonly />
                                                                </div>
                                                                <!--end::Input group-->
                                                            </div>
                                                            <!--end::Col-->
                                                        </div>
                                                        <!--end::Row-->
                                                    </div>
                                                </div>

                                            </form>
                                            <!--end::Form-->
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <!--begin::Statistics Widget 5-->
                                                    <a class="card border-primary bg-primary mb-5 mb-xl-2">
                                                        <!--begin::Body-->
                                                        <div class="card-body p-5">
                                                            <div
                                                                class="text-white fw-bold fs-2 d-flex flex-column align-items-center">
                                                                <i class="fas fa-shopping-cart text-white fs-2x"></i>
                                                                <h3 class="fs-5x text-white font-value" id="sale_count_total"></h3>
                                                                <span>Shitjet</span>
                                                            </div>
                                                        </div>
                                                        <!--end::Body-->
                                                    </a>
                                                    <!--end::Statistics Widget 5-->
                                                </div>
                                                <div class="col-md-6">
                                                    <!--begin::Statistics Widget 5-->
                                                    <a class="card border-danger bg-danger mb-5 mb-xl-2">
                                                        <!--begin::Body-->
                                                        <div class="card-body p-5">
                                                            <div
                                                                class="text-white fw-bold fs-2 d-flex flex-column align-items-center">
                                                                <i
                                                                    class="fas fa-exclamation-circle text-white fs-2x"></i>
                                                                <h3 class="fs-5x text-white font-value" id="debt_count_total"></h3>
                                                                <span>Borxhet</span>
                                                            </div>
                                                        </div>
                                                        <!--end::Body-->
                                                    </a>
                                                    <!--end::Statistics Widget 5-->
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--begin::Products-->
                                    <div class="card card-flush mt-5">
                                        <!--begin::Card header-->
                                        <div class="card-header align-items-center py-5 gap-2 gap-md-5">
                                            <!--begin::Card title-->
                                            <div class="card-title">
                                                <!--begin::Search-->
                                                <div class="d-flex align-items-center position-relative my-1">
                                                    <i class="ki-duotone ki-magnifier fs-3 position-absolute ms-4">
                                                        <span class="path1"></span>
                                                        <span class="path2"></span>
                                                    </i>
                                                    <input type="text" id="client_sales_table_search"
                                                        class="form-control form-control-solid w-250px ps-12"
                                                        placeholder="Kërko..." />
                                                </div>
                                                <!--end::Search-->
                                            </div>
                                            <!--end::Card title-->
                                            <!--begin::Card toolbar-->
                                            <div class="d-flex align-items-center ms-auto">
                                                <div class="ms-auto">
                                                    <div class="w-100">
                                                        <!--begin::Select2-->
                                                        <select class="form-select form-select-solid" id="paid_status"
                                                            data-control="select2" data-hide-search="true"
                                                            data-placeholder="Zgjedh">
                                                            <option></option>
                                                            <option value="true">Paguar</option>
                                                            <option value="false">Pa paguar</option>
                                                        </select>
                                                        <!--end::Select2-->
                                                    </div>
                                                </div>
                                                <div id="print" class="ms-3"></div>
                                            </div>
                                            <!--end::Card toolbar-->
                                        </div>
                                        <!--end::Card header-->
                                        <!--begin::Card body-->
                                        <div class="card-body pt-0">
                                            <div class="table-responsive">
                                                <!--begin::Table-->
                                                <table class="table align-middle table-row-dashed fs-6 gy-5"
                                                    id="client_sales_table">
                                                    <thead>
                                                        <tr
                                                            class="text-start text-gray-800 fw-bold fs-6 text-uppercase gs-0">
                                                            <th class="w-10px">Nr </th>
                                                            <th class="w-150px">Shifra faturës</th>
                                                            <th class="w-150px">Data</th>
                                                            <th class="w-100px">Nr i artikujve</th>
                                                            <th class="w-150px">Çmimi pa zbritje</th>
                                                            <th class="w-150px">Zbritja</th>
                                                            <th class="w-150px">Vlera Totale</th>
                                                            <th class="text-center w-100px">Opsionet</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody class="fw-semibold text-gray-700">
                                                    </tbody>
                                                </table>
                                                <!--end::Table-->
                                            </div>
                                        </div>
                                        <!--end::Card body-->
                                    </div>
                                    <!--end::Products-->
                                </div>
                                <!--end::Container-->
                            </div>
                            <!--end::Post-->
                        </div>
                        <!--end::Content-->

                        <%- include('./includes/footer.ejs') %>
                </div>
                <!--end::Wrapper-->
        </div>
        <!--end::Page-->
    </div>
    <!--end::App-->
    <!--begin::Javascript-->
    <%- include('./includes/script.ejs') %>

        <!--end::Javascript-->
        <script src="/assets/plugins/custom/datatables/datatables.bundle.js"></script>
        <!--begin::Custom Javascript(used for this page only)-->
        <script src="/assets/js/offert/client/client_history.js"></script>
        <!--end::Javascript-->
</body>
<!--end::Body-->

</html>