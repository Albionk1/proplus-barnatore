<!DOCTYPE html>
<!--
Author: Thana Dev 2023
Product Name: Services
-->
<html lang="en">

<!--begin::Head-->

<head><!--Begin Meta links-->
    <%- include ('includes/meta-links.ejs') %>
        <!--End Meta links-->
        <link href="/assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />
</head>
<!--end::Head-->
<!--begin::Body-->

<body id="kt_app_body" data-kt-app-layout="dark-sidebar" data-kt-app-header-fixed="true"
    data-kt-app-sidebar-enabled="true" data-kt-app-sidebar-fixed="true" data-kt-app-sidebar-hoverable="true"
    data-kt-app-sidebar-push-header="true" data-kt-app-sidebar-push-toolbar="true"
    data-kt-app-sidebar-push-footer="true" data-kt-app-toolbar-enabled="true" class="app-default">
    <!--begin::Theme mode setup on page load-->
    <script>var defaultThemeMode = "light"; var themeMode; if (document.documentElement) { if (document.documentElement.hasAttribute("data-bs-theme-mode")) { themeMode = document.documentElement.getAttribute("data-bs-theme-mode"); } else { if (localStorage.getItem("data-bs-theme") !== null) { themeMode = localStorage.getItem("data-bs-theme"); } else { themeMode = defaultThemeMode; } } if (themeMode === "system") { themeMode = window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light"; } document.documentElement.setAttribute("data-bs-theme", themeMode); }</script>
    <!--end::Theme mode setup on page load-->
    <!--begin::App-->
    <div class="d-flex flex-column flex-root app-root" id="kt_app_root">
        <!--begin::Page-->
        <div class="app-page flex-column flex-column-fluid" id="kt_app_page">
            <!--begin::Header-->
            <%- include('./includes/header.ejs') %>
                <!--end::Header-->
                <!--begin::Wrapper-->
                <div class="app-wrapper flex-column flex-row-fluid" id="kt_app_wrapper">
                    <!--begin::Sidebar-->
                    <%- include('./includes/sidebar.ejs') %>
                        <!--end::Sidebar-->
                        <!--begin::Main-->
                        <div class="app-main flex-column flex-row-fluid mt-10" id="kt_app_main">
                            <!--begin::Content-->
                            <div class="content d-flex flex-column flex-column-fluid" id="kt_content">
                                <!--begin::Post-->
                                <div class="post d-flex flex-column-fluid" id="kt_post">
                                    <!--begin::Container-->
                                    <div id="kt_content_container" class="container-fluid">
                                        <!--begin::Navs-->
                                        <div class="card-toolbar mb-5 w-100">
                                            <ul
                                                class="nav nav-tabs nav-stretch nav-line-tabs nav-line-tabs-2x border-transparent fs-5 fw-semibold flex-wrap">
                                                <!--begin::Nav item-->
                                                <li class="nav-item mt-2">
                                                    <a class="nav-link text-active-white "
                                                        href="/admin/company">Kompania</a>
                                                </li>
                                                <!--end::Nav item-->
                                                <!--begin::Nav item-->
                                                <li class="nav-item mt-2">
                                                    <a class="nav-link text-active-warning active"
                                                        href="/admin/company-unit">Njësitë</a>
                                                </li>
                                                <!--end::Nav item-->
                                                <!--begin::Nav item-->
                                                <li class="nav-item mt-2">
                                                    <a class="nav-link text-active-success"
                                                        href="/admin/company-politics">Politikat</a>
                                                </li>
                                                <!--end::Nav item-->
                                            </ul>
                                        </div>
                                        <!--begin::Navs-->
                                        <!--begin::Form-->
                                        <form class="form" id="form-add-unit">
                                            <!--begin::Content wrapper-->
                                            <div class="d-flex flex-column flex-column-fluid card">
                                                <!--begin::Card body-->
                                                <div class="card-body border-top pt-5">
                                                    <!--begin::Row-->
                                                    <div class="row">
                                                        <!--begin::Col-->
                                                        <div class="col-md-3 col-sm-6">
                                                            <!--begin::Input group-->
                                                            <div class="d-flex flex-column mb-7 fv-row">
                                                                <!--begin::Label-->
                                                                <label class="fs-6 fw-semibold form-label mt-3">
                                                                    <span>Emri i njësisë</span>
                                                                </label>
                                                                <!--end::Label-->
                                                                <!--begin::Input-->
                                                                <input type="text"
                                                                    class="form-control form-control-solid" name=""
                                                                    placeholder="Shëno emrin e njësisë"
                                                                    id="unit_name" />
                                                                <p id="unit_name-error"
                                                                    class="text-danger show-errors mb-0"></p>

                                                            </div>
                                                            <!--end::Input group-->
                                                        </div>
                                                        <!--end::Col-->
                                                        <!--begin::Col-->
                                                        <div class="col-md-3 col-sm-6">
                                                            <!--begin::Input group-->
                                                            <div class="d-flex flex-column mb-7 fv-row">
                                                                <!--begin::Label-->
                                                                <label class="fs-6 fw-semibold form-label mt-3">
                                                                    <span>Adresa</span>
                                                                </label>
                                                                <!--end::Label-->
                                                                <!--begin::Input-->
                                                                <input type="text"
                                                                    class="form-control form-control-solid" name=""
                                                                    value="" placeholder="Shëno adresën" id="address" />
                                                                <p id="address-error"
                                                                    class="text-danger show-errors mb-0"></p>

                                                            </div>
                                                            <!--end::Input group-->
                                                        </div>
                                                        <!--end::Col-->
                                                        <!--begin::Col-->
                                                        <div class="col-md-3 col-sm-6">
                                                            <!--begin::Input group-->
                                                            <div class="d-flex flex-column mb-2 fv-row">
                                                                <!--begin::Label-->
                                                                <label class="fs-6 fw-semibold form-label mt-3">
                                                                    <span>Abonimi</span>
                                                                </label>
                                                                <!--end::Label-->
                                                                <!--begin::Input-->
                                                                <select name="Njësia" aria-label="Njësia" id="token"
                                                                    data-placeholder="Zgjedhni abonimin"
                                                                    class="form-select mb-2">
                                                                    <option></option>
                                                                    <%for(let i=0;i<authorization.length;i++){%>
                                                                        <option value="<%=authorization[i]._id%>">
                                                                            <%=authorization[i].token%>
                                                                        </option>
                                                                        <%}%>
                                                                </select>
                                                                <!--end::Input-->
                                                                <p id="token-error"
                                                                    class="text-danger show-errors mb-0"></p>
                                                            </div>
                                                            <!--end::Input group-->
                                                        </div>
                                                        <%if(articlePrice>0){%>
                                                            <div class="col-md-3 col-sm-6">
                                                                <!--begin::Input group-->
                                                                <div class="d-flex flex-column mb-2 fv-row">
                                                                    <!--begin::Label-->
                                                                    <label class="fs-6 fw-semibold form-label mt-3">
                                                                        <span>Përzgjedhja e njësisë për t'ia marr
                                                                            çmimet</span>
                                                                    </label>
                                                                    <!--end::Label-->
                                                                    <!--begin::Input-->
                                                                    <select name="unit" aria-label="unit"
                                                                        id="unit_price"
                                                                        data-placeholder="Zgjedhni njësinë..."
                                                                        class="form-select mb-2">
                                                                        <option></option>
                                                                        <%for(let i=0;i<unit.length;i++){%>
                                                                            <option value="<%=unit[i]._id%>">
                                                                                <%=unit[i].unit_name%>
                                                                            </option>
                                                                            <%}%>
                                                                    </select>
                                                                    <!--end::Input-->
                                                                    <p id="unit_price-error"
                                                                        class="text-danger show-errors mb-0"></p>
                                                                </div>
                                                                <!--end::Input group-->
                                                            </div>
                                                            <%}%>
                                                                <!--end::Col-->
                                                                <div class="col-md-3 col-sm-6 mt-3">
                                                                    <!--begin::Action buttons-->
                                                                    <div class="w-100">
                                                                        <!--begin::Button-->
                                                                        <button id="" type="submit"
                                                                            data-kt-contacts-type="submit"
                                                                            class="btn btn-primary w-100 rounded-0">
                                                                            <span class="indicator-label">Regjistro
                                                                                njësinë</span>
                                                                        </button>
                                                                        <!--end::Button-->
                                                                    </div>
                                                                    <!--end::Action buttons-->
                                                                </div>
                                                    </div>
                                                    <!--end::Row-->

                                                </div>
                                            </div>

                                        </form>
                                        <!--end::Form-->
                                        <!--begin::Content-->
                                        <div id="kt_app_content" class=" flex-column-fluid">
                                            <!--begin::Content container-->
                                            <div id="kt_app_content_container">
                                                <!--begin::Products-->
                                                <div class="card card-flush">
                                                    <!--begin::Card header-->
                                                    <div class="card-header align-items-center py-5 gap-2 gap-md-5">
                                                        <!--begin::Card title-->
                                                        <div class="card-title">
                                                            <!--begin::Search-->
                                                            <div
                                                                class="d-flex align-items-center position-relative my-1">
                                                                <i
                                                                    class="ki-duotone ki-magnifier fs-3 position-absolute ms-4">
                                                                    <span class="path1"></span>
                                                                    <span class="path2"></span>
                                                                </i>
                                                                <input type="text"
                                                                    data-kt-ecommerce-order-filter="search"
                                                                    id="unit-search"
                                                                    class="form-control form-control-solid w-250px ps-12"
                                                                    placeholder="Kërko..." />
                                                            </div>
                                                            <!--end::Search-->
                                                        </div>
                                                        <!--end::Card title-->
                                                        <div id="print" class="ms-auto"></div>
                                                    </div>
                                                    <!--end::Card header-->
                                                    <!--begin::Card body-->
                                                    <div class="card-body pt-0">
                                                        <div class="table-responsive">
                                                            <!--begin::Table-->
                                                            <table class="table align-middle table-row-dashed fs-6 gy-5"
                                                                id="unit-table">
                                                                <thead>
                                                                    <tr
                                                                        class="text-start text-gray-800 fw-bold fs-6 text-uppercase gs-0">
                                                                        <th class="w-10px">Nr </th>
                                                                        <th class="w-100px">Emri i kompanisë</th>
                                                                        <th class="w-100px">Emri i njësisë</th>
                                                                        <th class="w-100px">Adresa e njësisë</th>
                                                                        <th class="w-100px">Nr i punëtorëve</th>
                                                                        <th class="w-100px">Licenca e abonimit</th>
                                                                        <th class="text-center w-10px">Opsion</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody class="fw-semibold text-gray-700">

                                                                </tbody>
                                                            </table>
                                                            <!--end::Table-->
                                                        </div>
                                                    </div>
                                                    <!--end::Card body-->
                                                </div>
                                                <!--end::Products-->
                                            </div>
                                            <!--end::Content container-->
                                        </div>
                                        <!--end::Content-->
                                    </div>
                                    <!--end::Container-->
                                </div>
                                <!--end::Post-->
                            </div>
                            <!--end::Content-->
                            <!--begin::Footer-->
                            <%- include('./includes/footer.ejs') %>
                                <!--end::Footer-->
                        </div>
                        <!--end:::Main-->
                </div>
                <!--end::Wrapper-->
        </div>
        <!--end::Page-->
    </div>
    <!--end::App-->
    <!--begin::Javascript-->
    <%- include('./includes/script.ejs') %>
        <!--end::Javascript-->
        <script src="/assets/plugins/custom/datatables/datatables.bundle.js"></script>
        <script src="/assets/js/utils.js"></script>
        <script src="/assets/js/company/addUnit.js"></script>
        <!--begin::Custom Javascript(used for this page only)-->
        <script>
            const select = document.getElementById('unit_price')
            if (select) {
                $('#unit_price').select2();
            }
        </script>
        <script src="/assets/js/custom/apps/ecommerce/customers/listing/search/arc.js"></script>
        <!--end::Javascript-->
</body>
<!--end::Body-->

</html>