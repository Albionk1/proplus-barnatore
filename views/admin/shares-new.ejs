    <script>
        function updateLabel(checkbox) {
            var labelText = document.getElementById("labelText");
            var priceShumicForm = document.getElementById("addActionMany");
            var pricePakicForm = document.getElementById("addActionFew");

            if (checkbox.checked) {
                labelText.textContent = "Çmimi me pakicë";
                priceShumicForm.classList.add("d-none");
                pricePakicForm.classList.remove("d-none");
            } else {
                labelText.textContent = "Çmimi me shumicë";
                priceShumicForm.classList.remove("d-none");
                pricePakicForm.classList.add("d-none");
            }
        }

        // Initialize the label and form on page load
        window.onload = function () {
            var checkbox = document.querySelector("input[type='checkbox']");
            var pricePakicForm = document.getElementById("addActionFew");
            pricePakicForm.classList.add("d-none");
            updateLabel(checkbox);
        };
    </script>





