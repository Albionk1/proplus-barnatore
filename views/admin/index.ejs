                        <div class="card card-flush">
                          <div class="row mt-4" style="padding: 0 2.25rem;">
                            <h3>Njoftime për artikuj</h3>
                          </div>
                          <!--begin::Card header-->
                          <div class="card-header align-items-center">

                            <!--begin::Card title-->
                            <div class="card-title w-100">
                              <!--begin::Search-->
                              <div class="d-flex align-items-center position-relative my-1 w-100">
                                <i class="ki-duotone ki-magnifier fs-3 position-absolute ms-4">
                                  <span class="path1"></span>
                                  <span class="path2"></span>
                                </i>
                                <input type="text" data-kt-ecommerce-order-filter7="search"
                                  class="form-control form-control-solid ps-12 kb-text w-100" placeholder="Kërko..." />
                              </div>
                              <!--end::Search-->
                            </div>
                            <!--end::Card title-->
                          </div>
                          <!--end::Card header-->
                          <!--begin::Card body-->
                          <div class="card-body pt-0">
                            <div class="table-responsive">
                              <!--begin::Table-->
                              <table class="table align-middle table-row-dashed fs-6 gy-5"
                                id="kt_ecommerce_sales_table7">
                                <thead>
                                  <tr class="text-start text-gray-800 fw-bold fs-6 text-uppercase gs-0">
                                    <th class="w-10px">Nr</th>
                                    <th class="w-200px">Artikulli</th>
                                    <th class="w-100px">Sasia aktuale</th>
                                    <th class="w-10px">Njësia</th>
                                  </tr>
                                </thead>
                                <tbody class="fw-semibold text-gray-700">

                                  <tr>
                                    <td class="text-gray-700 text-center">
