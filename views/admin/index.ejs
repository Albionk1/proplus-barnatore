                            <%for(let i =0;i<arc.length;i++){%>
                            <div class="col-sm-6 mt-5">
                              <div class="card">
                                <div class="card-body">
                                  <a data-bs-toggle="modal" data-bs-target="#user_<%=arc[i]._id%>"
                                    class="d-flex align-items-center" style="cursor: pointer;">
                                    <!--begin::Avatar-->
                                    <div class="symbol symbol-50px me-5">
                                      <img src="assets/media/avatars/300-25.jpg" class="" alt="" />
                                    </div>
                                    <!--end::Avatar-->
                                    <!--begin::Text-->
                                    <div class="flex-grow-1">
                                      <p class="text-dark fw-bold text-hover-primary fs-6 mb-0"><%=arc[i].seller.full_name%></p>
                                      <p class="text-dark fw-bold text-hover-primary d-block fw-bold mb-0">Hapja e arkës
                                        <span><%=moment(arc[i].createdAt).format('l')%> - <%=moment(arc[i].createdAt).format('HH:mm')%></span>
                                      </p>
                                      <p class="text-dark fw-bold text-hover-primary d-block fw-bold mb-0">Njësia
                                        <span><%=arc[i].unit.unit_name%></span>
                                      </p>
                                    </div>
                                    <!--end::Text-->
                                  </a>
                                </div>
                              </div>
                            </div>
                            <%}%>
                          </div>
                        </section>
                      </div>
                      <div class="col-xl-4 d-none">
