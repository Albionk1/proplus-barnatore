                      <p class="fs-5 text-gray-800 text-hover-primary fw-bold">Për dorëzim</p>
                    </div>
                    <!--end::Title-->
                    <!--begin::Label-->
                    <div class="d-flex align-items-center">
                      <div class="fw-bold fs-5 text-gray-800 pe-1"><%=arc[i].totalSales?parseFloat(arc[i].startCount+arc[i].totalSales ).toFixed(2):arc[i].startCount%> €</div>
