                </div>
                <!--end::Heading-->
                <!--begin::Balance-->
                <div class="d-flex text-center flex-column text-white pt-8">
                  <span class="fw-bold fs-2x pt-1"><%=arc[i].totalSales?parseFloat(arc[i].startCount+arc[i].totalSales ).toFixed(2):arc[i].startCount%> €</span>
