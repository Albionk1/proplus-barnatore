<html lang="en">
<!--begin::Head-->

<head>
    <!--Begin Meta links-->
    <%- include ('includes/meta-links.ejs') %>
    <link href="/assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css">
        <!--End Meta links-->
</head>

<body onload="startClock()" id="kt_app_body" data-kt-app-layout="dark-sidebar" data-kt-app-header-fixed="true"
    data-kt-app-sidebar-enabled="true" data-kt-app-sidebar-fixed="true" data-kt-app-sidebar-hoverable="true"
    data-kt-app-sidebar-push-header="true" data-kt-app-sidebar-push-toolbar="true"
    data-kt-app-sidebar-push-footer="true" data-kt-app-toolbar-enabled="true" class="app-default">
    <!--begin::App-->
    <div class="d-flex flex-column flex-root app-root" id="kt_app_root">
        <!--begin::Page-->
        <div class="app-page flex-column flex-column-fluid" id="kt_app_page">
            <!--begin::Nav-->
            <%- include('./includes/nav.ejs') %>
                <!--end::Nav-->
                <div class="container-fluid">
                    <div class="row mt-2">
                        <div class="col-lg-12 d-flex flex-column">
                            <section class="search-prouduct">
                                <!--begin::Products-->
                                <div class="card card-flush">
                                    <div class="row w-100 mt-4" style="padding: 0 2.25rem;">
                                        <div class="col-4 col-sm-3 col-lg-1">
                                            <div class="form-check form-check-custom form-check-solid">
                                                <input class="form-check-input" type="radio" value="barcode" id="radioBarkod"
                                                    name="radioGroup" checked />
                                                <label class="form-check-label text-dark" for="radioBarkod">
                                                    Barkod
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-4 col-sm-3 col-lg-1">
                                            <div class="form-check form-check-custom form-check-solid">
                                                <input class="form-check-input" type="radio" value="name" id="radioABC"
                                                    name="radioGroup" />
                                                <label class="form-check-label text-dark" for="radioABC">
                                                    ABC
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-4 col-sm-3 col-lg-1">
                                            <div class="form-check form-check-custom form-check-solid">
                                                <input class="form-check-input" type="radio" value="code" id="radioShifra"
                                                    name="radioGroup" />
                                                <label class="form-check-label text-dark" for="radioShifra">
                                                    Shifra
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <!--begin::Card header-->
                                    <div class="card-header align-items-center">

                                        <!--begin::Card title-->
                                        <div class="card-title w-100">
                                            <!--begin::Search-->
                                            <div class="d-flex align-items-center position-relative my-1 w-100">
                                                <i class="ki-duotone ki-magnifier fs-3 position-absolute ms-4">
                                                    <span class="path1"></span>
                                                    <span class="path2"></span>
                                                </i>
                                                <input type="text" id="find_article_table_search"
                                                    class="form-control form-control-solid ps-12 kb-text w-250px"
                                                    placeholder="Kërko..." />
                                            </div>
                                            <!--end::Search-->
                                        </div>
                                        <!--end::Card title-->
                                    </div>
                                    <!--end::Card header-->
                                    <!--begin::Card body-->
                                    <div class="card-body pt-0">
                                        <div class="table-responsive">
                                            <!--begin::Table-->
                                            <table class="table align-middle table-row-dashed fs-6 gy-5"
                                                id="find_article_table">
                                                <thead>
                                                    <tr
                                                        class="text-start text-gray-800 fw-bold fs-6 text-uppercase gs-0">
                                                        <th class="w-10px">Nr</th>
                                                        <th class="w-100px">Njësia</th>
                                                        <th class="w-100px">Adresa</th>
                                                        <th class="w-100px">Barkodi</th>
                                                        <th class="w-100px">Shifra</th>
                                                        <th class="w-100px">Artikulli</th>
                                                        <th class="w-10px">Sasia</th>
                                                    </tr>
                                                </thead>
                                                <tbody class="fw-semibold text-gray-700">
                                                </tbody>
                                            </table>
                                            <!--end::Table-->
                                        </div>
                                    </div>
                                    <!--end::Card body-->
                                </div>
                                <!--end::Products-->
                            </section>
                        </div>
                    </div>
                </div>
        </div>
        <!--end::Page-->
    </div>
    <!--end::App-->
    <!--begin::modals-script-->
    <%- include('./includes/modals-script.ejs') %>
        <!--end::modals-script-->
        <!--begin::Custom Javascript(used for this page only)-->
        <!--end::Javascript-->
        <script src="/assets/js/posftags.js"></script>
        <script src="/assets/plugins/custom/datatables/datatables.bundle.js"></script>
        <script src="/assets/js/find/find_product_table.js"></script>

</body>
<!--end::Body-->

</html>